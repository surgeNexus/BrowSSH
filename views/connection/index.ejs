<%- include('../partials/header') %>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">
            <nav style="width:112%;" class="navbar navbar-dark bg-dark">
              <a class="navbar-brand" href="/">BrowSSH</a>
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                  <li class="nav-item active">
                    <br>
                    <button type="button" class="no-button nav-link" data-toggle="modal" data-target="#exampleModal">
                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16" data-toggle="tooltip" data-placement="top" title="New connection">
                        <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                      </svg>
                    </button>
                  </li>
                </ul>
              </div>
            </nav>
            <nav style="width:112%;" class="navbar navbar-expand-lg navbar-dark bg-dark">
              <div class="" id="">
              <% connections.forEach((connection) => { %>
                <ul class="navbar-nav">
                  <li class="nav-item list-inline-item">
                    <a class="nav-link" href="/connection/<%= connection.id %>"><%= connection.name %></a>
                  </li>
                  <li class="nav-item list-inline-item">
                    <button type="button" class="no-button nav-link p-2" data-toggle="modal" data-target="#exampleModal<%= connection.id %>">
                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                      </svg>
                    </button>
                  </li>
                </ul>
                <div class="modal fade" id="exampleModal<%= connection.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">New Connection</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body">
                        <form action="/connection/<%= connection.id %>/edit?_method=PUT" method="POST">
                            <form>
                              <div class="mb-3">
                                <label for="exampleInputEmail1" class="form-label">Connection Name</label>
                                <input type="text" class="form-control" name="name" value="<%= connection.name %>">
                              </div>
                              <div class="mb-3">
                                <label for="exampleInputEmail1" class="form-label">Remote IP Address</label>
                                <input type="text" class="form-control" name="ip" value="<%= connection.ip %>">
                              </div>
                              <div class="mb-3">
                                <label for="exampleInputEmail1" class="form-label">Remote Port</label>
                                <input type="text" class="form-control" name="port" value="<%= connection.port %>">
                              </div>
                              <button type="submit" class="btn btn-primary">Save Connection</button>
                              <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            </form>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
              <% }) %>
              </div>
            </nav>
        </div>
        <div class="col-md-10">
            <nav class="navbar navbar-dark bg-dark">
              <a class="navbar-brand" href="#"></a>
            </nav>
            <div class="embed-responsive embed-responsive-16by9">
                <iframe class="embed-responsive-item" style="padding-right:0%; padding-left:0%" src="http://localhost:2222/ssh/host/<%= connection.ip %>?port=<%= connection.port %>" allowfullscreen></iframe>
            </div>
        </div>
    </div>
</div>



<%- include('../connection/new') %>

<%- include('../partials/footer') %>