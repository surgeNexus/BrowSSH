<%- include('./partials/header') %>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">
            <nav style="width:112%;" class="navbar navbar-dark bg-dark">
              <a class="navbar-brand" href="#">BrowSSH</a>
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                  <br>
                  <li class="nav-item active">
                    <button type="button" class="no-button nav-link" data-toggle="modal" data-target="#exampleModal">
                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16" data-toggle="tooltip" data-placement="top" title="New connection">
                        <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                      </svg>
                    </button>
                  </li>
                </ul>
              </div>
            </nav>
            <nav style="width:115%;" class="navbar navbar-expand-lg navbar-dark bg-dark">
              <div class="" id="">
                <% connections.forEach((connection) => { %>
                <ul class="navbar-nav">
                  <li class="nav-item list-inline-item">
                    <a class="nav-link" href="/connection/<%= connection.id %>"><%= connection.name %></a>
                  </li>
                </ul>
                <% }) %>
              </div>
            </nav>
        </div>
        <div class="col-md-10">
            <nav class="navbar navbar-dark bg-dark">
              <a class="navbar-brand" href="#"></a>
            </nav>
            <div class="embed-responsive embed-responsive-16by9">
                <iframe class="embed-responsive-item" style="padding-right:0%; padding-left:0%" src="http://localhost:2222/ssh/host/null" allowfullscreen></iframe>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->



<%- include('./connection/new') %>

